{
  "hostRequirements": {
     "cpus": 2,
     "memory": "8gb",
     "storage": "32gb"
  },
  "customizations": {
    "codespaces": {
      "repositories": {
        "alphagov/notifications-admin": {
          "permissions": {
            "contents": "write",
            "pull_requests": "write"
          }
        },
        "alphagov/notifications-api": {
          "permissions": {
            "contents": "read"
          }
        }
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/prepare-codespace.sh",
  "forwardPorts": ["6012"],
  "settings": {
    "remote.autoForwardPorts": false
  }
}
